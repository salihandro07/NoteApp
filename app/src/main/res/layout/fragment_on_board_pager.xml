<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.fragments.onboard.OnBoardPagerFragment">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txt_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удобство"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

        <TextView
            android:layout_marginBottom="-60dp"
            android:id="@+id/txt_body"
            android:layout_marginTop="8dp"
            android:text="Создавайте заметки в два клика! Записывайте мысли, идеи и важные задачи мгновенно."
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="12px"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/btn_start"
        android:textColor="@color/white"
        android:text="Начать"
        android:textSize="20sp"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:backgroundTint="#D88B02"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginBottom="150dp"
        android:layout_gravity="center"
        android:id="@+id/lottie_animation_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

</FrameLayout>